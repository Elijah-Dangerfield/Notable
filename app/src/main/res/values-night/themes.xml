<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Notable" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.Notable" parent="NightAdjusted.Theme.Notable">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.Notable" parent="PlatformAdjusted.Theme.Notable" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Notable.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Notable</item>
    </style>
</resources>
